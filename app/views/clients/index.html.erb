<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>
<% content_for :title, t(".title") %>
<% content_for :head do %>
  <%= stylesheet_link_tag "client/index", "data-turbo-track": "dynamic" %>
<% end %>

<h1><%= t(".heading") %></h1>
<div class="flexbox">
  <%= link_to t(".new"), new_team_client_path(@team), class: "flex-btn" %>
  <%= link_to t(".shifts"), team_client_shifts_path(@team, @client), class: "flex-btn" %>
  <%= link_to t(".users"), users_path, class: "flex-btn" %>
</div>

<div id="clients">
  <% @clients.each do |client| %>
    <%= link_to edit_team_client_path(@team, client) do %>
      <div class="card">
      <%= render client %>
      </div>
    <% end %>
  <% end %>
</div>
