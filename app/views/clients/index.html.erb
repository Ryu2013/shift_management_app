<p style="color: green"><%= notice %></p>

<% content_for :title, t(".title") %>
<% content_for :head do %>
  <%= stylesheet_link_tag "client/index", "data-turbo-track": "dynamic" %>
<% end %>

<h1><%= t(".heading") %></h1>

<div class="flexbox">
  <%= link_to t(".new"), new_client_path, class: "flex-btn" %>
  <%= link_to t(".shifts"), shifts_path, class: "flex-btn" %>
</div>

<div id="clients">
  <% @clients.each do |client| %>
    <%= link_to edit_client_path(client) do %>
      <div class="card">
      <%= render client %>
      </div>
    <% end %>
  <% end %>
</div>
