<%= turbo_frame_tag "user_client" do %>
  <div class="modal open">
      <%= turbo_stream_from [@team, :user_clients] %>

      <h1><%= @client.name %></h1>

      <div id="user_clients">
        <% @user_clients.select(&:persisted?).each do |user_client| %>
          <%= render user_client %>
        <% end %>
      </div>

      <% @users.each do |u| %>
      <%= button_to u.name, user_clients_path, method: :post, params: { user_client: { user_id: u.id, client_id: @client.id } }, class: "flex-btn" %>
      <% end %>

      <%= link_to "閉じる", edit_team_client_path(@team, @client) ,class: "flex-btn"%>
  </div>
<% end %>