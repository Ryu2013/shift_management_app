<%= form_with(model: [room, message], id: "message_form", html: { style: "display: flex; position: fixed; bottom: 0; width: 100%;" }) do |f| %>
  <%= f.text_field :content, autocomplete: "off", style: "flex-grow: 1; padding: 5px;" %>
  <%= f.submit "送信", style: "padding: 5px 10px; margin-right: 0.2rem; margin-bottom: 0.2rem;" %>
<% end %>
