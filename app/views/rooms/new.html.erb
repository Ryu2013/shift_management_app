<% if current_user.role == "admin" %>
  <div class="flex-box">
    <%= link_to team_client_shifts_path(@team,@client), class: "back-image-link" do %>
        <%= image_tag "back-btn.png", alt: t(".users"), class: "back-image" %>
    <% end %>
  </div>
<% else %>
  <div class="flex-box">
    <%= link_to employee_shifts_path do %>
        <%= image_tag "back-btn.png", alt: t(".shifts"), class: "back-image" %>
    <% end %>
  </div>
<% end %>


<h1>新規チャット</h1>

<div class="flexbox">
  <div class="toggle-switch">
    <%= link_to rooms_path, class: "toggle-selected" do %>
      既存
    <% end %>

    <%= link_to new_room_path, class: "toggle-selected active" do %>
      新規
    <% end %>
  </div>
</div>

<% @users.each do |user| %>
  <div class="card">
     <div class="flexbox" style="justify-content: space-between; flex-wrap: nowrap;">
       <div class="flexbox">
        <%= image_tag user.icon_url,style: "height: 80px; width: 80px;", class: "icon" %>
        <%= user.name %>
       </div>

        <%= button_to rooms_path(user_id: user.id), method: :post, data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#4CAF50" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
          </svg>
        <% end %>
    </div>
  </div>
<% end  %>