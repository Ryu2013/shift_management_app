<h2><%= t(".heading", resource: resource_name.to_s.humanize) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name,autocomplete: "name" %>
  </div>

   <div>
    <%= f.label :address, t(".address") %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :pref_per_week, t(".pref_per_week") %>
    <%= f.number_field :pref_per_week, in: 0..7 %>
  </div>

  <div>
    <%= f.label :commute, t(".commute") %>
    <%= f.text_field :commute %>
  </div>
  
  <div class="field">
    <%= f.label :email, t(".email") %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t(".pending_confirmation", email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, t(".password") %> <i style="font-size: 0.8em;"><%= t(".password_hint") %></i>
    <em style="font-size: 0.8em;"><%= t(".password_length", count: @minimum_password_length) %></em>
  </div>
    <%= f.password_field :password, autocomplete: "new-password" %>
      


  <div class="field">
    <%= f.label :password_confirmation, t(".password_confirmation") %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, t(".current_password") %> <i style="font-size: 0.8em;"><%= t(".current_password_hint") %></i>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="flexbox">
    <%= f.submit t(".submit"), class: "flex-btn" %>
    <%= link_to "戻る", users_path, class: "flex-btn" %>
  </div>
<% end %>

<div class="modal">
  <% if @team.users.size <= 1 %>
    <div><%= t(".requires_employee") %></div>
  <% else %>
    <%= t(".cancel_prompt") %>
    <div class="flexbox">
    <%= button_to t(".cancel_button"), registration_path(resource_name), data: { confirm: t(".cancel_confirm"), turbo_confirm: t(".cancel_confirm") }, method: :delete , class: "flex-btn" %>
    </div>
  <% end %>
</div>
