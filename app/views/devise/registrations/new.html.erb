<h2><%= t(".heading") %></h2>
<h2><%= @office.name %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name,team_id:params[:team_id])) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= f.hidden_field :team_id, value: params[:team_id] %>

  <div class="field">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name,autocomplete: "name", autofocus: true , required: true%>
  </div>

   <div>
    <%= f.label :address, t(".address") %>
    <%= f.text_field :address , required: true%>
  </div>

  <div>
    <%= f.label :pref_per_week, t(".pref_per_week") %>
    <%= f.select :pref_per_week, 0..7 %>
  </div>

  <div>
    <%= f.label :commute, t(".commute") %>
    <%= f.text_field :commute %>
  </div>

  <div class="field">
    <%= f.label :email, t(".email") %>
    <%= f.email_field :email, autocomplete: "email" , required: true %>
  </div>

  <div class="field">
    <%= f.label :password, t(".password") %>
    <% if @minimum_password_length %>
    <em><%= t(".password_hint", count: @minimum_password_length) %></em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t(".password_confirmation") %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <div class="flexbox">
    <%= f.submit t(".submit"), class: "flex-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
