<h2>ログイン</h2>

<% if @office.present? %>
  <p class="office-context">事業所: <strong><%= @office.name %></strong></p>
<% elsif params[:office_slug].present? %>
  <p class="office-context warning">事業所が見つかりませんでした。別のログインURLをお試しください。</p>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %><br />
    <%= f.password_field :password, autocomplete: 'current-password' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'ログイン情報を保存する' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'ログイン' %>
  </div>
<% end %>

<%= render 'employees/shared/links' %>
