<h2>新規事業所登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "employees/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :pending_office_name, '事業所名' %><br />
    <%= f.text_field :pending_office_name, autocomplete: 'organization' %>
  </div>

  <div class="field">
    <%= f.label :name, '担当者氏名' %><br />
    <%= f.text_field :name, autocomplete: 'name' %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autocomplete: 'email' %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: 'new-password' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード（確認）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: 'new-password' %>
  </div>

  <div class="actions">
    <%= f.submit '登録して確認メールを受け取る' %>
  </div>
<% end %>

<%= render "employees/shared/links" %>
