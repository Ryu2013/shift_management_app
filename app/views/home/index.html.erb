<%# app/views/home/index.html.erb %>

<% content_for :head do %>
  <%= stylesheet_link_tag "home/index", "data-turbo-track": "dynamic" %>
<% end %>

<div class="lp-container">
  <%# --- ヘッダー --- %>
  <header class="lp-header fade-in-down">
    <div class="header-inner">
      <div class="logo-area">
        <%= image_tag "logo.png", alt: "ケアシフト ロゴ", class: "header-logo" %>
        <span class="header-tag">シフト管理アプリ</span>
      </div>
      <nav class="header-nav">
        <%# スマホではハンバーガーにするか、ボタンを減らす %>
        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary" %>
        <%= link_to "ログイン", new_user_session_path, class: "btn btn-secondary mobile-hide" %>
      </nav>
    </div>
  </header>

  <%# --- メインビジュアル --- %>
  <section class="hero-section">
    <div class="hero-content scroll-trigger">
      <%= image_tag "title.png", alt: "タイトル", class: "hero-title" %>
      
      <%# ★追加: 強調バッジエリア %>
      <div class="hero-badges">
        <div class="badge-item free-badge">
          <span class="badge-icon">¥0</span>
          <span class="badge-text">5人無料</span>
        </div>
        <div class="badge-item device-badge">
          <%# SVGアイコン: PC & Mobile %>
          <svg class="badge-icon-svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="2" y="3" width="13" height="9" rx="2" ry="2"></rect>
            <path d="M2 12h13"></path>
            <rect x="17" y="8" width="5" height="9" rx="1" ry="1"></rect>
          </svg>
          <span class="badge-text">PC・スマホ対応</span>
        </div>
          <%# --- ★追加: 簡単操作！ --- %>
        <div class="badge-item easy-badge">
          <%# SVGアイコン: キラキラ（手軽・快適） %>
          <svg class="badge-icon-svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
          </svg>
          <span class="badge-text">簡単操作！</span>
        </div>
      </div>

      <p class="hero-catch">シフト管理のストレスをゼロに。<br class="sp-only">いつでもどこでも、コストをかけずに。</p>
      
      <div class="hero-cta">
        <%= link_to new_user_registration_path, class: "btn btn-primary btn-xl shadow-pulse" do %>
          新規登録
        <% end %>

            <%# 2. Googleで登録ボタン %>
            <%# ※パス名はご自身のroutes設定に合わせて user_google_oauth2_omniauth_authorize_path 等に変更してください %>
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-google" do %>
              <%# Google "G" ロゴのSVG %>
              <svg class="google-icon" viewBox="0 0 24 24">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
              <span>Googleで登録</span>
            <% end %>
            <p class="text-small">
              アカウントを作成することで、
              <%= link_to "利用規約", terms_path, target: "_blank", rel: "noopener noreferrer" ,style: "color: blue;" %>
              および<br>
              <%= link_to "プライバシーポリシー", privacy_policy_path, target: "_blank", rel: "noopener noreferrer", style: "color: blue;" %>
              に同意したものとみなします。
            </p>

          

      </div>
    </div>
  </section>

  <%# --- 特徴1: シフト登録 --- %>
  <section class="feature-section">
    <div class="feature-container">
      <div class="feature-text scroll-trigger from-left">
        <h2 class="feature-heading">2クリックで<br><span class="highlight">簡単にシフト登録!</span></h2>
        <p class="feature-desc">担当者を選んでポチッとするだけ。<br>PCの大画面でも、スマホのタッチ操作でも<br>直感的に登録完了します。</p>
      </div>
      <div class="feature-visual scroll-trigger from-right">
        <div class="device-frame shifts-frame">
          <%= image_tag "shifts.png", class: "frame-bg", alt: "シフト画面背景" %>
          <%= image_tag "client_need.png", class: "frame-content float-anim", alt: "担当者選択ポップアップ" %>
        </div>
      </div>
    </div>
  </section>

  <%# --- 特徴2: 勤怠管理 --- %>
  <section class="feature-section reverse">
    <div class="feature-container">
      <div class="feature-text scroll-trigger from-right">
        <h2 class="feature-heading">勤怠管理も<br><span class="highlight">らくらく!</span></h2>
        <p class="feature-desc">出勤状況が一目瞭然。<br>管理の手間を大幅に削減します。</p>
      </div>
      <div class="feature-visual scroll-trigger from-left">
        <div class="simple-frame">
          <%= image_tag "work_statuses.png", class: "feature-img shadow-lg", alt: "出勤状況管理" %>
        </div>
      </div>
    </div>
  </section>

  <%# --- 特徴3: 出勤共有 --- %>
  <section class="feature-section">
    <div class="feature-container">
      <div class="feature-text scroll-trigger from-left">
        <h2 class="feature-heading">出勤も共有も<br><span class="highlight">１クリック</span></h2>
        <p class="feature-desc">従業員への連絡もスムーズ。<br>もう連絡漏れは起きません。</p>
      </div>
      <div class="feature-visual scroll-trigger from-right">
        <div class="device-frame employee-frame">
          <%= image_tag "employee.png", class: "frame-bg", alt: "従業員画面背景" %>
          <%= image_tag "pointer.png", class: "floating-pointer", alt: "ポインター" %>
        </div>
      </div>
    </div>
  </section>

  <%# --- ★追加: コスト＆デバイス訴求セクション --- %>
  <section class="value-section">
    <div class="value-container">
      
      <%# PC/スマホ対応 %>
      <div class="value-card scroll-trigger">
        <div class="value-icon-wrapper">
          <svg class="value-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <rect x="4" y="2" width="16" height="12" rx="2"></rect>
            <rect x="8" y="18" width="8" height="4" rx="1"></rect>
            <path d="M12 14v4"></path>
            <path d="M20 10h2"></path>
            <path d="M2 10h2"></path>
          </svg>
        </div>
        <h3>PCでもスマホでも</h3>
        <p>事務所のパソコンでじっくり管理。<br>移動中にスマホでサッと確認。<br>クラウドだからデータは常に同期されます。</p>
      </div>

      <%# ずっと無料 %>
      <div class="value-card highlight-card scroll-trigger" style="transition-delay: 0.2s;">
        <div class="value-icon-wrapper">
          <span class="value-text-icon">¥300</span>
        </div>
        <h3>分かりやすい料金体系</h3>
        <p>契約日に毎月、従業員1人につき300円請求いたします。<br>最初の5人までは<br>無料でご利用いただけます。</p>
      </div>

    </div>
  </section>

  <%# --- フッター/CTA --- %>
  <footer class="lp-footer scroll-trigger">
    <div class="footer-content">
      <%= image_tag "footer_title.png", alt: "さあ、始めましょう", class: "footer-title" %>
      <div class="footer-actions">
        <%= link_to "今すぐ無料で登録する", new_user_registration_path, class: "btn btn-primary btn-lg shadow-pulse" %>
        <div class="sub-actions">
          <%= link_to "ログイン", new_user_session_path, class: "text-link" %>
          <span class="separator">|</span>
          <%= button_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "text-link",form: { style: "display: inline-block;" } %>
        </div>
        <div class="sub-actions">
          <%= link_to "使い方", how_to_use_path, class: "text-link" %>
          <span class="separator">|</span>
          <%= link_to "アプリ運営者", "https://ryu2013.github.io/ryuuiti_memos/", class: "text-link" %>
        </div>
        <div class="sub-actions">
          <%= link_to "利用規約", terms_path, target: "_blank", rel: "noopener noreferrer" ,class: "text-link" %>
          <span class="separator">|</span>
          <%= link_to "プライバシーポリシー", privacy_policy_path, target: "_blank", rel: "noopener noreferrer", class: "text-link" %>
        </div>
      </div>
    </div>
  </footer>
</div>