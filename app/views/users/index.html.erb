<p style="color: green"><%= notice %></p>

<% content_for :title, t(".title") %>
<% content_for :head do %>
  <%= stylesheet_link_tag "user/index", "data-turbo-track": "dynamic" %>
<% end %>

<h1><%= t(".heading") %></h1>

<div class="flexbox">
  <%= link_to t(".new"), "#", class: "flex-btn" %>
  <%= link_to t(".shifts"), shifts_path, class: "flex-btn" %>
</div>

<div id="clients">
  <% @users.each do |user| %>
    <%= link_to "#" do %>
      <div class="card">
        <%= render user %>
      </div>
    <% end %>
  <% end %>
</div>
