<% content_for :title, t(".title") %>
<% content_for :head do %>
  <%= stylesheet_link_tag "user/index", "data-turbo-track": "dynamic" %>
<% end %>

<%= link_to  team_client_shifts_path(@team,@client) do %>
  <%= image_tag "back-btn.png", alt: t(".shifts"), class: "back-image" %>
<% end %>

<h1><%= @team.name %></h1>

<%= form_with url: team_users_path(@team), method: :get, local: true do |f| %>
  <div class="flexbox" style="margin: 20px;"> 

    <%= f.collection_select :selected_team_id,
                            @teams,
                            :id,
                            :name,
                            { prompt: "部署を変更" },
                            { onchange: "this.form.requestSubmit();" } %>

  </div>
<% end %>

<div class="flexbox">
  <%= link_to t(".new"),  new_user_invitation_path, class: "flex-btn" %>

  <div class="toggle-switch">
    <%= link_to team_users_path(@team), class: "toggle-selected #{'active' if params[:controller].to_s.end_with?('users')}" do %>
      従業員
    <% end %>

    <%= link_to team_clients_path(@team), class: "toggle-selected #{'active' if params[:controller].to_s.end_with?('clients')}" do %>
      利用者
    <% end %>
  </div>
</div>


<% @users.each do |user| %>
    <div class="card">
     <div class="flexbox" style="justify-content: space-between;">
      <%= link_to edit_team_user_path(@team, user) do %>
        <%= render user %>
      <% end %>


      <% if current_user != user %>
        <%= button_to rooms_path(user_id: user.id), method: :post, data: { turbo: false } do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#4CAF50" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
          </svg>
        <% end %>
      <% end %>
     </div>
    </div>
<% end %>

