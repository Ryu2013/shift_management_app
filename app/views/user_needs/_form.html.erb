<%= form_with(model: user_need) do |form| %>
  <% if user_need.errors.any? %>
    <div style="color: red">
      <h2><%= t(".errors.title", count: user_need.errors.count) %></h2>

      <ul>
        <% user_need.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :office_id, style: "display: block" %>
    <%= form.text_field :office_id %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  </div>

  <div>
    <%= form.label :week, style: "display: block" %>
    <%= form.number_field :week %>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :end_time, style: "display: block" %>
    <%= form.time_field :end_time %>
  </div>

  <div>
    <%= form.submit t(".submit") %>
  </div>
<% end %>
