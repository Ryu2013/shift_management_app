<%= turbo_frame_tag "user_needs" do %>
<div class="modal open">
  <h1><%= t(".heading") %></h1>

  <% UserNeed.weeks.keys.each do |week| %>
    <div class="card">
      <h2><%= t("activerecord.attributes.user_need.weeks.#{week}") %></h2>
      <div id="user_needs_<%= week %>">
       <%= render (@user_needs[week] || []) %>
      </div>
    </div>
  <% end %>
  <%= render "form", user_need: @user_need %>
<% end %>