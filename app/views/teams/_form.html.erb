<%= form_with(model: team, data: {turbo: false}) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <ul>
        <% team.errors.each do |error| %>
          <%= error.message %>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="flexbox">
    <%= form.submit t(".submit") ,class: "flex-btn" %>
  </div>

<% end %>
