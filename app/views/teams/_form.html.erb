<%= form_with(model: team, data: {turbo: false}) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
