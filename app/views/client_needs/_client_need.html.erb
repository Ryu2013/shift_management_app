<div id="<%= dom_id client_need %>">
  <p>
    <strong><%= t(".week") %></strong>
    <%= t("activerecord.attributes.client_need.weeks.#{client_need.week}") %>
  </p>

  <p>
    <strong><%= t(".need_type") %></strong>
    <%= t("activerecord.attributes.client_need.shift_types.#{client_need.shift_type}") %>
  </p>

  <p>
    <strong><%= t(".start_time") %></strong>
    <%= l client_need.start_time %>
  </p>

  <p>
    <strong><%= t(".end_time") %></strong>
    <%= l client_need.end_time %>
  </p>

  <p>
    <strong><%= t(".slots") %></strong>
    <%= client_need.slots %>
  </p>

  <% if client_need.persisted? %>
  <%= button_to "Delete", client_need_path(client_need), method: :delete, form: { data: { turbo_confirm: "delete?" } } %>
  <% end %>

</div>
